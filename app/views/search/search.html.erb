<h1>Articles</h1>

<%= link_to 'All Articles', articles_url %>

<form method="get" action="search">
  <p>
    Search for: <input type="text" name="query" placeholder="war and peace">
    <%= submit_tag "Go", name: nil %>
  </p>
</form>

<ul>
  <% @articles.each do |article| %>
    <li>
      <h3>
        <%= link_to article.title,
          controller: "articles",
          action: "show",
          id: article.id%>
      </h3>
      <% if article %>
       <%= article.text %>
      <% end %>
    </li>
  <% end %>
</ul>

